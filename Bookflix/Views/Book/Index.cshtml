@model IEnumerable<Book>

@{
    ViewData["Title"] = "List of Movies";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Title
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.ISBN"><i class="bi bi-pencil-square"></i></a>
                                    }
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@("~/img/books-img/"+item.ImageName)" asp-append-version="true" width="100%" alt="@item.Title">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><b>Author: </b>@item.Author.Name</p>
                            <p class="card-text"><b>Category: </b>@foreach(var cat in item.Categories)
                                {
                                    @(cat.Name + " ")
                                }</p>
                            <p class="card-text"><b>Publication Year: </b>@item.PublicationYear.ToString("dd MMM yy")</p>
                            <p class="card-text"><b>Price: </b>@item.Price</p>
                            @*<p class="card-text"><b>End Date: </b>@item.EndDate.ToString("dd MMM yy")</p>*@
                            <p class="card-text ">
                                <b>Status: </b>
                                @if (0 < item.StockNo)
                                {
                                    <span class="badge bg-success text-white">AVAILABLE</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger text-white">Out Of Stock</span>
                                }

                            </p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.ISBN">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                                <div class="hover-content">
                                <div class="add-to-cart-btn">
                                <a class="btn essence-btn @((DateTime.Now > item.PublicationYear) ? "disabled" : "")" 
                                   asp-controller="Orders" 
                                   asp-action="AddItemToShoppingCart" 
                                   asp-route-id="@item.ISBN">
                                <i class="bi bi-cart-plus"></i> Add to Cart (Price @item.Price.ToString("c"))</a>
                                </div>
                                </div>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

