@using Bookflix.Data.ViewModels
@model ShoppingCartVM

@{
    ViewData["Title"] = "Shopping cart";
}


<div class="row">
    <div class="col-md-8 offset-2">
        <div class="text-center">

            <h2>your shopping cart summary</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Amount</th>
                        <th>Book name</th>
                        <th>Price</th>
                        <th>Subtotal</th>
                        <th></th>
                    </tr>

                </thead>
                <tbody>
                    @foreach(var item in Model.ShopingCart.shoppingCartItems) {
                        <tr>
                            <td class="align-middle">@item.Amount</td>
                            <td class="align-middle">@item.Book.Title</td>
                            <td class="align-middle">@item.Book.Price.ToString("c")</td>
                            <td class="align-middle">@((item.Amount* item.Book.Price).ToString("c"))</td>
                            <td class="align-middle">
                                <a class="text-danger" asp-controller="Orders" asp-action="RemoveItemFromShoppingCart"
                                asp-route-id="@item.Book.ISBN"><i class="bi bi-cart-dash"></i> </a>
                                <a class="text-success" asp-controller="Orders" asp-action="AddItemToShoppingCart"
                                asp-route-id="@item.Book.ISBN"><i class="bi bi-cart-plus"></i> </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="2"></td>
                        <td><b>Total:</b></td>
                        <td>@Model.ShoppingCartTotal.ToString("c")</td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>

            <div class="text-center">
                <div class="btn-group">
                    <a class="btn btn-outline-success" asp-action="CompleteOrder">

                    </a>
                    <a class="btn btn-outline-success" asp-controller="Book" asp-action="Index">
                        Add more items
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>