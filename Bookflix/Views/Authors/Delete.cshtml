@model Bookflix.Models.Author

@{
    ViewData["Title"] = "Delete";
}

<div class="Authors-Delete">
    <div class="container">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <h1 class="text-center font-h1">Delete</h1>

                <h3 class="text-center font-h3">Are you sure you want to delete this?</h3>
                <div>
                    <h4 class="text-center font-h4">Author</h4>
                    <hr />
                    <dl class="row">
                        <dt class = "col-sm-2">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class = "col-sm-2">
                            @Html.DisplayNameFor(model => model.Address)
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.Address)
                        </dd>
                    </dl>
    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ID" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a class="Back-To-List" asp-action="Index">
                            <i class="bi bi-arrow-left"></i>Back to List
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>